{
  "dashboard": {
    "id": null,
    "title": "Ghostwarden Security Dashboard",
    "tags": ["ghostwarden", "security"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Service Status",
        "type": "stat",
        "targets": [
          {
            "expr": "up{job=\"ghostwarden\"}",
            "legendFormat": "Ghostwarden Up"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "green", "value": 1}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Currently Banned IPs",
        "type": "stat",
        "targets": [
          {
            "expr": "ghostwarden_banned_ips_current",
            "legendFormat": "Banned IPs"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0}
      },
      {
        "id": 3,
        "title": "Ban/Unban Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(ghostwarden_bans_total[5m])",
            "legendFormat": "Bans/sec"
          },
          {
            "expr": "rate(ghostwarden_unbans_total[5m])",
            "legendFormat": "Unbans/sec"
          }
        ],
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 8}
      },
      {
        "id": 4,
        "title": "Component Activity",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(ghostwarden_crowdsec_decisions_total[5m])",
            "legendFormat": "CrowdSec Decisions/sec"
          },
          {
            "expr": "rate(ghostwarden_wazuh_alerts_total[5m])",
            "legendFormat": "Wazuh Alerts/sec"
          },
          {
            "expr": "rate(ghostwarden_proxmox_api_calls_total[5m])",
            "legendFormat": "Proxmox API Calls/sec"
          }
        ],
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 16}
      },
      {
        "id": 5,
        "title": "Error Rates",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(ghostwarden_errors_total[5m])",
            "legendFormat": "{{component}} Errors/sec"
          }
        ],
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 24}
      },
      {
        "id": 6,
        "title": "Sync Duration",
        "type": "graph",
        "targets": [
          {
            "expr": "ghostwarden_sync_duration_seconds",
            "legendFormat": "Sync Duration (seconds)"
          }
        ],
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 32}
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "30s"
  }
}
